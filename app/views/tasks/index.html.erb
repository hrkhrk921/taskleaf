<div class="container">
  <h1>タスク一覧</h1>
    <%= link_to("新規登録","/tasks/new",class:"btn btn-primary")%>
    <div class="row">
      <div class="col-md-9">
        <table class="table table-hover">
          <thead class="thead-default">
            <tr>
              <th><%= Task.human_attribute_name(:name) %></th>
              <th><%= Task.human_attribute_name(:created_at) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @tasks.each do |task| %>
              <td><%= link_to task.name,"/tasks/#{task.id}"%></td>
              <td><%= task.created_at %></td>
              <td><%= link_to "編集","/tasks/#{task.id}/edit",class:"btn btn-primary mr-3" %></td>
            </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
