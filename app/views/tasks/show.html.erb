<div class="container">
  <h1>タスクの詳細</h1>
  <nav class="nav d-flex justify-content-end">
    <%= link_to "一覧","/",class:"nav-link" %>
  </nav>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th>
          <%= Task.human_attribute_name(:id) %>
        </th>
        <td>
          <%= @task.id %>
        </td>
      </tr>
      <tr>
        <th>
          <%= Task.human_attribute_name(:name) %>
        </th>
        <td>
          <%= @task.name %>
        </td>
      </tr>
      <tr>
        <th>
          <%= Task.human_attribute_name(:description) %>
        </th>
        <td>
          <%= simple_format(@task.description)%>
        </td>
      </tr>
      <tr>
        <th>
          <%= Task.human_attribute_name(:created_at) %>
        </th>
        <td>
          <%= @task.created_at %>
        </td>
      </tr>
      <tr>
        <th>
          <%= Task.human_attribute_name(:updated_at) %>
        </th>
        <td>
          <%= @task.updated_at %>
        </td>
      </tr>
      <tr>
        <th><%= link_to "編集","/tasks/#{@task.id}/edit",class:"btn btn-primary mr-3" %></th>
      </tr>
    </tbody>
  </table>
</div>
